<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ChessRatings"
             x:Class="ChessRatings.MainPage">

    <StackLayout>
        <!-- Place new controls here -->
        <Label Text="Chess Elo Ratings Calculator" 
           HorizontalOptions="Center"
           FontSize="Large"
           FontAttributes="Bold"
            />
        <Label Text="Player 1 Ratings:"/>
        <Entry x:Name="Player1Ratings" Text=""/>
        <Label Text="Player 2 Ratings:"/>
        <Entry x:Name="Player2Ratings" Text=""/>

        <Label Text="Who won?"/>
        <Button x:Name="Player1Won" Text="Player One" IsEnabled="true" Clicked="Player1Won_Clicked"
                WidthRequest="100"/>
        <Button x:Name="Player2Won" Text="Player Two" IsEnabled="true" Clicked="Player2Won_Clicked"
                WidthRequest ="100"/>
        <Button x:Name="Tied" Text="Tied" IsEnabled="true" Clicked="Tied_Clicked"
                WidthRequest="100"/>
        <Button x:Name="Calculate" Text="Calculate" Clicked="OnCalculate" IsEnabled="true"/>

        <Label Text="Ratings "/>

        <Label x:Name ="player1NewRatings" Text="Player 1: "/>
        <Label x:Name ="player2NewRatings" Text="Player 2: "/>




    </StackLayout>

</ContentPage>
